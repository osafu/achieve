<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <%= user.name %>
        <% if user.id != current_user.id %>
          <%= render 'follow_form', user: user %>
          <%= link_to '詳細', user_path(user), { :class => "btn-user-info btn btn-large btn-info" } %>
          <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), { :class => "btn-user-info btn btn-large btn-primary", method: 'post' } %>
        <% end %>
      </div>
  <% end %>
</div>
